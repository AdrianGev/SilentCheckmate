{
  "name": "silentcheckmate",
  "version": "1.0.0",
  "description": "A multiplayer chess application that allows users to play chess with each other from different computers",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "server": "node server.js",
    "dev": "concurrently \"npm run start\" \"npm run server\"",
    "build": "electron-builder build --win --publish never"
  },
  "keywords": [],
  "author": "Silent Checkmate Team",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "chess.js": "^1.4.0",
    "concurrently": "^8.2.2",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "express": "^5.1.0",
    "react": "^19.1.1",
    "react-chessboard": "^5.5.0",
    "react-dom": "^19.1.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.silentcheckmate.app",
    "productName": "Silent Checkmate",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/icon.png"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "uuid": "^11.1.0"
  }
}
